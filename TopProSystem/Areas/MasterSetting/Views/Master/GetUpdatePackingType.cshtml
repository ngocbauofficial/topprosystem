

@model TopProSystem.Areas.MasterSetting.Models.MA012
@using StaticResources
@using StaticResources.View.MA012
@{

    ViewBag.Title = Resource.ChangePackingTypeTitle;
    Layout = "~/Areas/MasterSetting/Views/Shared/_LayoutMA012.cshtml";
    ViewBag.headerName = ViewBag.Title;

}
<style>
    input[type=text], select {
        width: 338px;
    }

    .divTableRow .divTableCell:first-child {
        width: 10%;
    }

    .divTableRow .divTableCell:last-child {
        width: 90%;
    }
</style>

<div class="container-fluid">
    <div class="data-content">
        <form action="@Url.Action("Update_Due_Maker_Commodity_Days_Cal_Weigth","Master")" method="post" name="formdata" id="Update-Master-Form">
            <div class="divTable w-100" style="border: 1px solid #000">
                <div class="divTableBody">
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.MNCLSCD</span></div>
                        <div class="divTableCell">
                            <input type="text" name="MNCLSCD" id="MNCLSCD" value="@Model.MNCLSCD" readonly tabindex="1" />
                        </div>

                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.MNSRCD</span></div>
                        <div class="divTableCell">
                            <input type="text" name="MNSRCD" id="MNSRCD" value="@Model.MNSRCD" readonly tabindex="2" />
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.MNSRSNM</span></div>
                        <div class="divTableCell">
                            <input type="text" name="MNSRSNM" id="MNSRSNM" value="@Model.MNSRSNM" tabindex="3" />
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.MNSRNM</span></div>
                        <div class="divTableCell">
                            <input type="text" name="MNSRNM" id="MNSRNM" value="@Model.MNSRNM" tabindex="4" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3 float-right">
                <button type="submit" class="btn-primary">@Button.BtnConfirm</button>
                <button type="button" class="cancel" onclick="javascript:window.location.href='/MasterSetting/Master/PackingTypeMaster'">@Button.BtnCancel</button>

            </div>
        </form>
    </div>

</div>


