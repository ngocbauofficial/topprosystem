@model TopProSystem.Areas.MasterSetting.Models.MA005
@using StaticResources
@using StaticResources.View.Coating

@{
                /**/

                ViewBag.Title = Resource.ChangeTitle;
                Layout = "~/Areas/MasterSetting/Views/Shared/_LayoutMasterSeting.cshtml";
                ViewBag.headerName = ViewBag.Title;
}

<style>
    input[type = text], input[type = "password"], select {
        width: 300px;
    }

    .divTableRow .divTableCell:first-child {
        width: 10%;
    }

    .divTableRow .divTableCell:last-child {
        width: 90%;
    }
</style>
<div class="container-fluid">
    <div class="data-content">
        <form action="@Url.Action("UpdateCoatingMaster","Master")" method="post" name="formdata" id="Coating-Master-Form">
            <div class="divTable" style="border:1px solid #000">
                <div class="divTableBody">
                    <div class="divTableRow ">
                        <div class="divTableCell "><span class="title-normal">@Resource.MECOAT</span></div>
                        <div class="divTableCell "><input type="text" name="MECOAT" id="MECOAT" value="@Model.MECOAT.Trim()" readonly tabindex="1" /></div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell "><span class="title-normal">@Resource.MECOATW</span></div>
                        <div class="divTableCell "><input type="text" name="MECOATW" id="MECOATW" value="@Model.MECOATW" tabindex="2" /></div>
                    </div>
                </div>
            </div>
            <div class="mt-3 float-right">
                <button type="submit" class="btn-primary">@Button.BtnConfirm</button>
                <button type="button" class="cancel" onclick="javascript:window.location.href='/MasterSetting/Master/CoatingMaster'">@Button.BtnCancel</button>

            </div>
        </form>
    </div>
</div>

<script type="text/javascript">

    $('#Coating-Master-Form').validate({
        rules: {
            MECOATW: {
                required: true,
                maxlength: 6,
                number: true,
            },
        },
        messages: {
              MECOATW: {
                required: '@Html.Raw(RLayout.Required)',
                number: '@Html.Raw(RLayout.IsNumber)',
                maxlength: '@Html.Raw(string.Format(RLayout.Maxlength,"6"))',
            }
        },
        errorElement: 'label',
        errorPlacement: function (error, element) {
            error.insertAfter(element);
        },
    });
</script>

