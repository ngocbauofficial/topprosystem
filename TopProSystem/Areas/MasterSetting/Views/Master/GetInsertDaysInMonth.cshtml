@model TopProSystem.Areas.MasterSetting.Models.MA012
@using StaticResources
@using StaticResources.View.MA012
@{

    ViewBag.Title = Resource.InsertDaysInMonthTitle;
    Layout = "~/Areas/MasterSetting/Views/Shared/_LayoutMA012.cshtml";
    ViewBag.headerName = ViewBag.Title;
}


<style>
    input[type=text], select {
        width: 338px;
    }

    .divTableRow .divTableCell:first-child {
        width: 10%;
    }

    .divTableRow .divTableCell:last-child {
        width: 90%;
    }
</style>

<div class="container-fluid">
    <div class="data-content">
        <form action="@Url.Action("Insert_Due_Maker_Commodity_Days_Cal_Weigth","Master")" method="post" id="Insert-Master-Form">
            <div class="divTable w-100" style="border: 1px solid #000">
                <div class="divTableBody">
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.MNCLSCD</span></div>
                        <div class="divTableCell">
                            <input type="text" name="MNCLSCD" id="MNCLSCD" value="002" tabindex="1" readonly style="color:#0b8dff" />
                        </div>

                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.MNSRCD</span></div>
                        <div class="divTableCell">
                            <input type="text" name="MNSRCD" id="MNSRCD" value="" tabindex="2"/>
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.MNSRNM</span></div>
                        <div class="divTableCell">
                            <input type="text" name="MNSRSNM" id="MNSRSNM" value="" tabindex="3"/>
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.MNSRNM</span></div>
                        <div class="divTableCell">
                            <input type="text" name="MNSRNM" id="MNSRNM" value="" tabindex="4"/>
                        </div>
                    </div>
                </div>
            </div>
            <div class="mt-3 float-right">
                <button type="submit" class="btn-primary">@Button.BtnConfirm</button>
                <button type="button" class="cancel" onclick="window.location.href='/MasterSetting/Master/DaysInMonthMaster'">@Button.BtnCancel</button>

            </div>
        </form>
    </div>

</div>

