@model TopProSystem.Areas.MasterSetting.Models.SteelGrade
@using StaticResources
@using StaticResources.View.SteelGrade

@{
    ViewBag.Title = Resource.UpdateTitle;
    Layout = "~/Areas/MasterSetting/Views/Shared/_LayoutMasterSeting.cshtml";
    ViewBag.headerName = ViewBag.Title;
}

<style>
    input[type=text], select {
        width: 338px;
    }

    .divTableRow .divTableCell:first-child {
        width: 10%;
    }

    .divTableRow .divTableCell:last-child {
        width: 90%;
    }
</style>

<div class="container-fluid">
    <div class="data-content">
        <form action="@Url.Action("UpdateSteelGrade","Master")" method="post" id="SteelGrade-Master-Form">
            <div class="divTable w-100" style="border: 1px solid #000">
                <div class="divTableBody">
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.Grade</span></div>
                        <div class="divTableCell">
                            <input type="text" name="Grade" id="Grade" value="@Model.Grade" readonly tabindex="1" />

                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.SAEsymbol</span></div>
                        <div class="divTableCell">
                            <input type="text" name="SAEsymbol" id="SAEsymbol" value="@Model.SAEsymbol" tabindex="2" />
                        </div>
                    </div>

                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.C</span></div>
                        <div class="divTableCell">
                            <input type="text" name="C" id="C" value="@Model.C" tabindex="2" />
                        </div>
                    </div>

                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.Mn</span></div>
                        <div class="divTableCell">
                            <input type="text" name="Mn" id="Mn" value="@Model.Mn" tabindex="2" />
                        </div>
                    </div>

                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.P</span></div>
                        <div class="divTableCell">
                            <input type="text" name="P" id="P" value="@Model.P" tabindex="2" />
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.S</span></div>
                        <div class="divTableCell">
                            <input type="text" name="S" id="S" value="@Model.S" tabindex="2" />
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.Si</span></div>
                        <div class="divTableCell">
                            <input type="text" name="Si" id="Si" value="@Model.Si" tabindex="2" />
                        </div>
                    </div>
                    <div class="divTableRow">
                        <div class="divTableCell"><span class="title-normal">@Resource.Al</span></div>
                        <div class="divTableCell">
                            <input type="text" name="Al" id="Al" value="@Model.Al" tabindex="2" />
                        </div>
                    </div>

                </div>
            </div>
            <div class="mt-3 float-right">
                <button type="submit" class="btn-primary">@Button.BtnConfirm</button>
                <button type="button" class="cancel" onclick="javascript:window.location.href='/MasterSetting/Master/SteelGradeMaster'">@Button.BtnCancel</button>
            </div>
        </form>
    </div>
</div>


<script type="text/javascript">
    const URL_CHECK_CUSTOMERCODE_EXISTS = '/Master/CheckSteelGradeCodeExists';

    $('#SteelGrade-Master-Form').validate({
        rules: {
            STGCD: {
                required: true,
                maxlength: 6,

            },
            STGNM: {
                required: true,
                maxlength: 30,

            }
        },
        messages: {
            STGCD: {
                 required: '@Html.Raw(RLayout.Required)',

                  maxlength: '@Html.Raw(string.Format(RLayout.Maxlength,"6"))',
            },
            STGNM: {
                required: '@Html.Raw(RLayout.Required)',
                maxlength: '@Html.Raw(string.Format(RLayout.Maxlength,"30"))',

            },

        },
        errorElement: 'label',
        errorPlacement: function (error, element) {
            error.insertAfter(element);
        },
    })


</script>