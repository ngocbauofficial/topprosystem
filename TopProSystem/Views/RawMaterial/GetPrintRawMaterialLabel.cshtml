@using StaticResources
@using StaticResources.View.INV001
@model string
@{
    ViewBag.Title = ItemMenuRawMaterial.PrintRawMaterialLabel;
    Layout = "~/Views/Shared/_LayoutPageRawMaterial.cshtml";
    ViewBag.content = ItemMenuRawMaterial.PrintRawMaterialLabel;
}


<div class="row w-100 container-fluid m-0 p-0">
    @*<form action="/" method="post">*@
    <div class="col-md-12 mt-4 py-2 row w-100 m-0 p-0">
        <div class="centerdiv" style="width: 505px">
            <form action="/" method="post" id="form-data">
                <div class="row m-0">
                    <div class="col-md-4 col-4 p-0">
                        <div class="float-right"><span class="title">@Resource.SelectLabelType</span></div>
                    </div>
                    <div class="col-md-7 col-7">
                        @Html.DropDownList("sl-labelType", new SelectList(ViewBag.LabelType, "MNSRCD", "MNSRNM"), RLayout.SelectAction)
                    </div>
                </div>
                <div class="row m-0">
                    <div class="col-md-4 col-4 p-0">
                        <div class="float-right"><span class="title">@Resource.RawMaterialNoFrom</span></div>
                    </div>
                    <div class="col-md-7 col-7">
                        <input type="text" name="rm-from" id="rm-from" value="" style="width: 264px" />
                    </div>
                </div>
                <div class="row m-0">
                    <div class="col-md-4 col-4 p-0">
                        <div class="float-right"><span class="title">@Resource.RawMaterialNoTo</span></div>
                    </div>
                    <div class="col-md-7 col-7">
                        <input type="text" name="rm-to" id="rm-to" value="" style="width: 264px" />
                    </div>
                </div>
            </form>
        </div>
        <div class="col-md-12 mt-3">
            <div class="text-center">
                <small id="message"></small>
            </div>
        </div>
        <div class="col-md-12 mt-3 w-100 p-0">
            <div class="text-center">
                <button type="submit" class="confirm" onclick="createPDFView()">@Button.BtnConfirm</button>
                <button type="button" class="cancel">@Button.BtnCancel</button>
                <button type="button" id="printbtn" class="d-none" onclick="CreateFile()">Print</button>
            </div>
        </div>
    </div>

    @*</form>*@
</div>


<div class="row pdfviewer w-100 container-fluid mt-2 mx-0 p-0 border-top border-dark" id="pdfview-pos">

</div>

<script type="text/javascript">

    const LabelType = {
        RM: 'RM',
        MC : 'MC'
    }

    function CreateFile() {
        $.ajax({
            url: '@Url.Action("CreateRawMaterialLabel", "RawMaterial")',
            type: 'GET',
            dataType: 'json',
            data: { fromR: localStorage.getItem("fromR") || $('#rm-from').val(), toR: localStorage.getItem("toR") || $('#rm-to').val() },
            success: function (rs) {
                if (parseInt(rs.status) === 1) {
                    ErrorAlert(rs.error)
                } else if (parseInt(rs.status) === 2) {
                    ErrorAlert('@Html.Raw(RLayout.NoDataFound)');
                } else if (parseInt(rs.status) === 3) {
                    ErrorAlert('@Html.Raw(RLayout.NoPrinterMachineFound)');
                }
            },
            beforeSend: function () {
                $('body').append(expLoading);
            },
            complete: function () {
                $('#exp-loading').remove();
            },
            error: function (rs) {
                ErrorAlert(rs.responseText);
            }
        })
    }

    var _take = 8;
    var Skip = 0;
    var dataLength = 0;
    function createPDFView(_skip, storage = false) {
        if (_skip === null || _skip === undefined) {
            _skip = 0;
            Skip = _skip;
            $('#pdfview-pos').html("");
        }
        var fromR, toR;
        if (typeof (Storage) !== "undefined") { // check browser suppport localStorage
            if (storage) {
                fromR = localStorage.getItem("fromR");
                toR = localStorage.getItem("toR");
            } else {
                fromR = $('#rm-from').val();
                toR = $('#rm-to').val();
                localStorage.setItem("fromR", fromR);
                localStorage.setItem("toR", toR);
            }
        } else {
            fromR = $('#rm-from').val();
            toR = $('#rm-to').val();
        }

        var lbtype = $('#sl-labelType').val();
        var ds = [];

        if (lbtype !== '') {
            $.ajax({
                url: '@Url.Action("GetReviewLabel","RawMaterial")',
                type: 'POST',
                dataType: 'json',
                data: { fromR: fromR, toR: toR, skip: _skip, take: _take },
                success: function (rs) {
                    if (parseInt(rs.status) === 0) {
                        ds = rs.list;
                        dataLength = rs.dataLength;
                    } else if (parseInt(rs.status) === 2) {
                        dataLength = 0;
                        ErrorAlert("@Html.Raw(RLayout.NoDataFound)");
                    }
                },
                beforeSend: function () {
                    $('body').append(expLoading);
                },
                complete: function () {
                    $('#exp-loading').remove();
                    if (ds !== null) {
                        switch (lbtype) {
                            case LabelType.MC:
                                for (var i = from; i <= to; i++) {
                                    var html = '';
                                    var string = "SS18168" + i;
                                    html += '<div class="col-lg col-md col-sm mt-4">';
                                    html += '<div class="pdfviewer-file1">';
                                    html += '<table border="1">';
                                    html += '<tr>';
                                    html += '<td colspan="2">';
                                    html += '<span>Mother Coil No</span>';
                                    html += '<div class="text-center">';
                                    html += '<p>' + string + '</p>';
                                    html += '<img src="/Images/barcode.jpg" alt="Alternate Text" width="315" height="40"/>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '';
                                    html += '</tr>';
                                    html += '<tr>';
                                    html += '<td colspan="2">';
                                    html += '<span>Grate</span>';
                                    html += '<p>M4/M120-27S</p>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '<tr>';
                                    html += '<td>';
                                    html += '<span>Net Weight (Kgs)</span>';
                                    html += '<div class="text-center">';
                                    html += '<p>4070</p>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '<td>';
                                    html += '<span>Size (mm)</span>';
                                    html += '<div class="text-center">';
                                    html += '<p>0.5</p>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '<tr>';
                                    html += '<td colspan="2">';
                                    html += '<span>Mill Inspection No</span>';
                                    html += '<p>10436-5812457</p>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '</table>';
                                    html += '</div>';
                                    html += '</div>';
                                    $('#pdfview-pos').append(html);
                                    $('#printbtn').removeClass('d-none');
                                }
                                break;
                            case '2':
                                for (var i = from; i <= to; i++) {
                                    var html = '';
                                    var string = "SS18168" + i;
                                    html += '<div class="col-lg col-md col-sm mt-4">';
                                    html += '<div class="pdfviewer-file">';
                                    html += '<table border="1">';
                                    html += '<tr>';
                                    html += '<td colspan="2">';
                                    html += '<small>Mother coil No</small>';
                                    html += '<div class="text-center">';
                                    html += '<span style="font-size:38px;">' + string + '</span><br />';
                                    html += '<img src="/Images/barcode.jpg" alt="Alternate Text" width="200" height="50" /><br />';
                                    html += '<small>' + string + '</small>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '<tr>';
                                    html += '<td colspan="2">';
                                    html += '<small>Grade</small><br />';
                                    html += '<span style="font-size: 20px;">M4/M120-27S</span>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '<tr>';
                                    html += '<td colspan="2">';
                                    html += '<small>Size (mm)</small>';
                                    html += '<div class="text-center">';
                                    html += '<span style="font-size: 20px; word-spacing: 15px;">0.27 X 970 X Coil</span>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '<tr>';
                                    html += '<td>';
                                    html += '<small>Quantity/Pcs</small><br />';
                                    html += '<div class="text-center">';
                                    html += '<span style="font-size: 20px;">1</span>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '<td>';
                                    html += '<small>Net Weight (Kgs)</small><br />';
                                    html += '<div class="text-center">';
                                    html += '<span style="font-size: 20px;">4070</span>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '<tr>';
                                    html += '<td colspan="2">';
                                    html += '<small>Mill Inspection No</small><br />';
                                    html += '<span style="font-size: 20px;">10436-5812457</span>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '<tr>';
                                    html += '<td colspan="2">';
                                    html += '<div class="text-center">';
                                    html += '<span style="font-size:38px;" >' + string + '</span><br />';
                                    html += '<img src="/Images/barcode.jpg" alt="Alternate Text" width="200" height="50" /><br />';
                                    html += '<small>' + string + '</small>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '</table>';
                                    html += '<table border="0" class="mt-4">';
                                    html += '<tr>';
                                    html += '<td class="w-100 p-0">';
                                    html += '<div class="float-left">';
                                    html += '<img src="/Images/barcode.jpg" alt="Alternate Text" width="140" height="25" />';
                                    html += '<div class="text-center">';
                                    html += '<small>' + string + '</small>';
                                    html += '</div>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '<td class="row p-0">';
                                    html += '<div class="float-right">';
                                    html += '<img src="/Images/barcode.jpg" alt="Alternate Text" width="140" height="25" />';
                                    html += '<div class="text-center">';
                                    html += '<small> ' + string + '</small>';
                                    html += '</div>';
                                    html += '</div>';
                                    html += '</td>';
                                    html += '</tr>';
                                    html += '</table>';
                                    html += '</div>';
                                    html += '</div>';
                                    $('#pdfview-pos').append(html);
                                    $('#printbtn').removeClass('d-none');
                                }
                                break;
                            case LabelType.RM:
                                CreateElementLazyLoading(ds);
                                break;
                        }

                    }
                    if (dataLength !== 0) {
                        $('#printbtn').removeClass('d-none');
                    } else {
                        $('#printbtn').addClass('d-none');
                    }
                }
            });

        }
    }

    function CreateElementLazyLoading(ds) {
        var html = '';
        var sbarcode;
        for (var key = 0;key < ds.length; key++) {
            sbarcode = ds[key].CAINVNO;
            html += '<div class="col-lg col-md col-sm mt-4">';
            html += '<div class="pdfviewer-file1">';
            html += '<table border="1">';
            html += '<tr>';
            html += '<td colspan="2">';
            html += '<div class="text-center mt-1"><img src="/Images/Logo/LogoForForm.png" width="50" height="40"/> <span class="h5">Formosa Gear</span></div>';
            html += '<div class="text-center mt-3">';
            html += '<p>' + sbarcode + '</p>';
            html += '<img height="80" width="300" ' + ds[key].BarCode;
            html += '</div>';
            html += '</td>';
            html += '</tr>';
            html += '<tr>';
            html += '<tr >';
            html += '<td class="py-2" style="border-right:none;">';
            html += '<div class="text-center mt-2"><img height = "30" width="180" ' + ds[key].BarCode + '<p style="font-size: 9pt">' + sbarcode + '</p> </div>';
            html += '</td>';
            html += '<td class="py-2" style="border-left:none;">';
            html += '<div class="text-center mt-2"><img height = "30" width="180" ' + ds[key].BarCode + '<p style="font-size: 9pt">' + sbarcode + '</p></div>';
            html += '</td>';
            html += '</tr>';
            html += '</table>';
            html += '</div>';
            html += '</div>';
        }
        $('#pdfview-pos').append(html);
    }

    $(window).scroll(function () {
        if ($(window).scrollTop() + $(window).height() == $(document).height()) {
            var length = $('#pdfview-pos').find('table').length;
            if (length >= _take && length < dataLength) {
                Skip += _take;
                createPDFView(Skip,true);
            }
        }
    });



</script>