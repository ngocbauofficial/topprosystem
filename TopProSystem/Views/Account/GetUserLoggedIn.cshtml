@model IEnumerable<TopProSystem.Areas.MasterSetting.Models.MA003>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>User Logged in List</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <style>
        body{
            font-family: initial;
        }
        .data-content {
            margin-top: 20px;
            border-radius: 10px;
            min-height: 400px;
            border: 1px solid #000;
            background: #3d5e7f;
            text-align:center;
        }

        table {
            margin-top: 100px;
            margin-left: auto;
            margin-right:auto;
            line-height: normal;
          
        }
       
        span{
            text-transform:uppercase;
            text-decoration: underline;
            font-size: 20pt;
            color: #fff;
            
        }
            table thead th {
                text-align: center;
                background-color: #eae8e8;
                text-transform:uppercase;
            }
            table tbody td{
                text-align:left;
            }
            table tbody td:last-child{
                text-align:center;
            }

            table a{
                color: #000;
            }
            table a:hover{
                text-decoration:none;
            }
    </style>
</head>
<body>
    <div class="container">
        <div class="data-content">
            <span>User Logged In List</span>
            <table class="table table-sm bg-light table-bordered w-50" border="1">
                <thead>
                    <tr>
                        <th>
                            User id
                        </th>
                        <th>
                            Name
                        </th>
                        <th>

                        </th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.MCIDCD)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.MCIDNM)
                            </td>
                            <td>
                                <form action="@Url.Action("RemoveUserSession","Account",new {userid= item.MCIDCD })" id="@item.MCIDCD" method="post">
                                    <a href="javascript:document.getElementById('@item.MCIDCD').submit()">Distroy</a>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
       
    </div>

</body>
</html>
